<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#ed83da"
                android:centerColor="#9c417b"
                android:centerY="1.0"
                android:endColor="#e1096a"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#dcd871"
                    android:centerColor="#cec62c"
                    android:centerY="1.0"
                    android:endColor="#fdf2eb0b"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list> 